<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="system-menu" label="System">
    <item label="ObConf">
      <action name="Execute">
        <command>obconf</command>
      </action>
    </item>
    <item label="Manage Cups Printers">
      <action name="Execute">
        <command>xdg-open http://localhost:631/</command>
        <startupnotify>
          <enabled>no</enabled>
          <icon>cups</icon>
        </startupnotify>
      </action>
    </item>
    <separator/>
    <item label="Reload Openbox Configuration">
      <action name="Reconfigure"/>
    </item>
  </menu>
  <menu id="root-menu" label="Openbox 3">
    <separator label="Programs"/>
    <item label="Files">
      <action name="Execute"><command>thunar</command></action>
    </item>
    <item label="Chromium">
      <action name="Execute"><command>chromium</command></action>
    </item>
    <item label="Thunderbird">
      <action name="Execute"><command>thunderbird</command></action>
    </item>
    <item label="Sublime Text">
      <action name="Execute"><command>subl</command></action>
    </item>
    <item label="Deadbeef">
      <action name="Execute"><command>deadbeef</command></action>
    </item>
    <item label="Deadmouse">
      <action name="Execute"><command>deadmouse</command></action>
    </item>
    <item label="gThumb">
      <action name="Execute"><command>gthumb</command></action>
    </item>
    <item label="Pidgin">
      <action name="Execute"><command>pidgin</command></action>
    </item>
    <item label="Skype">
      <action name="Execute"><command>skype</command></action>
    </item>
    <item label="Terminal">
      <action name="Execute"><command>terminal</command></action>
    </item>

    <item label="All Programs">
      <action name="Execute"><command>xfce4-appfinder</command></action>
    </item>

    <separator />
    <menu id="system-menu"/>

    <separator label="Power"/>
    <item label="Zzz...">
      <action name="Execute">
        <command>zzz</command>
      </action>
    </item>
    <item label="Hibernate">
      <action name="Execute">
        <command>zzz hard</command>
        <prompt>
          Hibernate?
        </prompt>
      </action>
    </item>
    <item label="Logout">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </item>
    <item label="Restart">
      <action name="Execute">
        <command>reboot</command>
        <prompt>
          Reboot?
        </prompt>
      </action>
    </item>
    <item label="Power Off">
      <action name="Execute">
        <command>poweroff</command>
        <prompt>
          Power Off?
        </prompt>
      </action>
    </item>
  </menu>
</openbox_menu>
