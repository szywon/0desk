<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="system-menu" label="Configuration">
    <item label="Preferred Applications">
      <action name="Execute">
        <command>exo-preferred-applications</command>
      </action>
    </item>
    <item label="Printers">
      <action name="Execute">
        <command>system-config-printer</command>
      </action>
    </item>
    <item label="Wallpaper">
      <action name="Execute">
        <command>wallpaper</command>
      </action>
    </item>
    <separator/>
    <item label="ObConf">
      <action name="Execute">
        <command>obconf</command>
      </action>
    </item>
    <item label="ObMenu">
      <action name="Execute">
        <command>obmenu</command>
      </action>
    </item>
    <item label="Reload Openbox Configuration">
      <action name="Reconfigure"/>
    </item>
  </menu>
  <menu id="root-menu" label="Openbox 3">
    <separator label="Basic"/>
    <item label="Files">
      <action name="Execute"><command>exo-open .</command></action>
    </item>
    <item label="Web">
      <action name="Execute"><command>exo-open --launch WebBrowser</command></action>
    </item>
    <item label="Mail">
      <action name="Execute"><command>exo-open --launch MailReader</command></action>
    </item>
    <separator label="Programs" />
    <item label="Sublime Text">
      <action name="Execute"><command>subl</command></action>
    </item>
    <item label="Deadbeef">
      <action name="Execute"><command>deadbeef</command></action>
    </item>
    <item label="Deadmouse">
      <action name="Execute"><command>deadmouse</command></action>
    </item>
    <item label="gThumb">
      <action name="Execute"><command>gthumb</command></action>
    </item>
    <item label="Pidgin">
      <action name="Execute"><command>pidgin</command></action>
    </item>
    <item label="Skype">
      <action name="Execute"><command>skype</command></action>
    </item>
    <item label="Terminal">
      <action name="Execute"><command>exo-open --launch TerminalEmulator</command></action>
    </item>

    <item label="All Programs">
      <action name="Execute"><command>xfce4-appfinder</command></action>
    </item>

    <separator label="System"/>

    <menu id="system-menu"/>
    <separator />

    <item label="Zzz...">
      <action name="Execute">
        <command>zzz</command>
      </action>
    </item>
    <item label="Hibernate">
      <action name="Execute">
        <command>zzz hard</command>
        <prompt>Hibernate?</prompt>
      </action>
    </item>
    <item label="Logout">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </item>
    <item label="Reboot">
      <action name="Execute">
        <command>reboot</command>
        <prompt>Reboot?</prompt>
      </action>
    </item>
    <item label="Power Off">
      <action name="Execute">
        <command>poweroff</command>
        <prompt>Power Off?</prompt>
      </action>
    </item>
  </menu>
</openbox_menu>
